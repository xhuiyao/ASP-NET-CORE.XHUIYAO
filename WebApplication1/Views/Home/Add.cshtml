@model CoreDemo.Models.Cinema

<form asp-action="Add">
   
    <div class="form-group row">
        <label class="sr-only" asp-for="Name"></label>

        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">名称</div>
            </div>
            <input type="text" class="form-control" asp-for="Name">
        </div>

    </div>
    <div class="form-group row">
        <label class="sr-only" asp-for="Location"></label>
        <div class="input-group mb-12">
            <div class="input-group-prepend">
                <div class="input-group-text">地址</div>
            </div>
            <input type="text" class="form-control" asp-for="Location">
        </div>
    </div>
    <div class="form-group row">
        <label class="sr-only" asp-for="Capacity"></label>
        <div class="input-group mb-12">
            <div class="input-group-prepend">
                <div class="input-group-text">容量</div>
            </div>
            <input type="text" class="form-control" asp-for="Capacity">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

